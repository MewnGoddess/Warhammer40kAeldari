<!-- Shuriken catapult -->
 <ThingDef ParentName="BaseGun">
    <defName>BEWH_SCatapult</defName>
    <label>shuriken catapult</label>
    <description>...</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Weapons/ShurikenCatapult</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.2</drawSize>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <smeltable>false</smeltable>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <Mass>4.6</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <tradeTags>
      <li>WeaponRanged</li>
    </tradeTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BEWH_Bullet_SCatapult</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>25.9</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>BEWH_ShotShurikenCatapult</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>BEWH_Bullet_SCatapult</defName>
    <label>monomolecular disc</label>
    <graphicData>
      <texPath>Weapons/ShurikenProjectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Cut</damageDef> 
      <damageAmountBase>30</damageAmountBase>
      <armorPenetrationBase>0.55</armorPenetrationBase>
      <speed>120</speed>
    </projectile>
  </ThingDef>

